
<div style="margin-left:30px;margin-top:-10px"> 
<h3>Users </h3></div>
<div style="margin-left:30px;margin-top:0px">
<table id='example' class="table table-bordered table-striped"> 
  <thead style="background-color: #ffffff;color:#ff">
    <tr>
        <th>Image </th>
      <th>Fname </th>
       <th>Lname </th>
        <th>Username </th>
        <th>Email </th>
         <th >Joining date</th>
        <th>Birth date</th>
        <th>Contact no</th>
        <th>Is active</th>
        <th>Edit user</th>
        <th>Delete user</th>
        <th>Show user</th>
     </tr>
    </thead>
    <tbody class="table-hover">
    <% @users.each do |user| %>
      <tr class="">
         <td><%= gravatar_for(user) %></td>
        <td><%= user.first_name %></td>
        <td><%=  user.last_name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td width="30%" ><%= user.joining_date %></td>
        <td><%=  user.birth_date %></td>
        <td><%=  user.contact_no %></td>
        <td><%=  user.is_active %></td>
        <td>      
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admin_user_path(user), :class => '' %> </td>
            <td>  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admin_user_path(user),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => '' %>
        </td>
        <td>
        <%= link_to "show", admin_user_path(user), :class => '' %>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="margin-top:18px">
<%= link_to t('.new', :default => t("helpers.links.new")),
  new_admin_user_path,
  :class => 'btn btn-primary' %>

  <%= link_to t('.back', :default => t("helpers.links.back")),
    admin_users_path, :class => 'btn'  %>
 </div>
</div>
